#:import utils kivy.utils
<PongBall>:
    size: 50,50
    canvas:
        Color:
            rgba: utils.get_color_from_hex('#ff1f84')
        Ellipse:
            pos : self.pos
            size : self.size

<PongPaddle>:
    size: self.parent.width / 4, 20
    canvas:
        Color:
            rgba: utils.get_color_from_hex('#ff1f84')
        Rectangle:
            pos : self.pos
            size : self.size

<PongGame>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#005240')
        Rectangle:
            pos: self.pos
            size: self.size
    ball : pong_ball
    paddle_1 : pong_paddle_1
    paddle_2 : pong_paddle_2

    Label:
        font_size : 70
        center_x : root.width / 4
        top : root.top - 50
        text : str(root.paddle_1.score)

    Label:
        font_size : 70
        center_x : root.width * 3 / 4
        top : root.top - 50
        text : str(root.paddle_2.score)

    PongBall:
        id : pong_ball
        center : self.parent.center

    PongPaddle:
        id : pong_paddle_1
        y : root.y
        center_x : root.center_x

    PongPaddle:
        id : pong_paddle_2
        y : root.height - self.height
        center_x : root.center_x